<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.judecodes.mailadmin.infrastructure.mapper.AdminMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.judecodes.mailadmin.domain.entity.Admin">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="icon" property="icon" />
        <result column="email" property="email" />
        <result column="nick_name" property="nickName" />
        <result column="note" property="note" />
        <result column="create_time" property="createTime" />
        <result column="login_time" property="loginTime" />
        <result column="status" property="status" />
        <result column="update_time" property="updateTime" />
        <result column="deleted" property="deleted" />
        <result column="lock_version" property="lockVersion" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, icon, email, nick_name, note, create_time, login_time, status, update_time, deleted, lock_version
    </sql>
    <select id="selectRoleNameListByAdminId" resultType="java.lang.String">
        SELECT r.name
        FROM ums_admin_role_relation arr
                 LEFT JOIN ums_role r ON arr.role_id = r.id
        WHERE arr.admin_id = #{adminId}
          AND r.deleted = 0
          AND r.status = 1
    </select>

    <select id="selectPermissionNameListByAdminId" resultType="java.lang.String">
        SELECT DISTINCT res.name
        FROM ums_admin_role_relation arr
                 LEFT JOIN ums_role_resource_relation rrr ON arr.role_id = rrr.role_id
                 LEFT JOIN ums_resource res ON rrr.resource_id = res.id
        WHERE arr.admin_id = #{adminId}
          AND res.deleted = 0
    </select>
</mapper>
