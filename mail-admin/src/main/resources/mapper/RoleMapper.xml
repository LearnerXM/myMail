<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.judecodes.mailadmin.infrastructure.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.judecodes.mailadmin.domain.entity.Role">
        <id column="id" property="id" />
        <result column="role_code" property="roleCode" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="admin_count" property="adminCount" />
        <result column="create_time" property="createTime" />
        <result column="status" property="status" />
        <result column="sort" property="sort" />
        <result column="update_time" property="updateTime" />
        <result column="deleted" property="deleted" />
        <result column="lock_version" property="lockVersion" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, role_code, name, description, admin_count, create_time, status, sort, update_time, deleted, lock_version
    </sql>
    <select id="selectRoleListByAdminId" resultType="com.judecodes.mailadmin.vo.RoleBasicInfo">
        SELECT ur.id, ur.name
        FROM ums_admin_role_relation as uarr
                 LEFT JOIN ums_role as ur on uarr.role_id = ur.id
        WHERE uarr.admin_id = #{adminId}
    </select>

</mapper>
